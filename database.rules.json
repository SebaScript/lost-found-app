{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "posts": {
      ".read": "auth != null",
      "$postId": {
        ".write": "auth != null"
      }
    },
    "chats": {
      "$chatId": {
        ".read": "auth != null && (data.child('senderId').val() == auth.uid || data.child('receiverId').val() == auth.uid)",
        ".write": "auth != null && (data.child('senderId').val() == auth.uid || data.child('receiverId').val() == auth.uid)"
      }
    },
    "messages": {
      "$messageId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
