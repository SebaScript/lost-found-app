rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users/{uid}
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Only the user themselves can create/update their profile
      allow create, update: if isOwner(userId);
      
      // No one can delete user profiles
      allow delete: if false;
    }
    
    // Posts collection (main content module)
    match /posts/{postId} {
      // Anyone authenticated can read posts (Vista global)
      allow read: if isAuthenticated();
      
      // Any authenticated user can create posts
      allow create: if isAuthenticated()
                    && request.resource.data.ownerId == request.auth.uid;
      
      // Only the owner can update their posts
      allow update: if isAuthenticated()
                    && resource.data.ownerId == request.auth.uid;
      
      // Only the owner can delete their posts
      allow delete: if isAuthenticated()
                    && resource.data.ownerId == request.auth.uid;
    }
    
    // Chats collection (real-time messages module)
    match /chats/{chatId} {
      // Users can read chats where they are sender or receiver
      allow read: if isAuthenticated() 
                  && (resource.data.senderId == request.auth.uid 
                  || resource.data.receiverId == request.auth.uid);
      
      // Users can create chats where they are sender or receiver
      allow create: if isAuthenticated()
                    && (request.resource.data.senderId == request.auth.uid
                    || request.resource.data.receiverId == request.auth.uid);
      
      // Users can update chats where they are sender or receiver
      allow update: if isAuthenticated()
                    && (resource.data.senderId == request.auth.uid
                    || resource.data.receiverId == request.auth.uid);
      
      // Users can delete chats where they are sender or receiver
      allow delete: if isAuthenticated()
                    && (resource.data.senderId == request.auth.uid
                    || resource.data.receiverId == request.auth.uid);
    }
    
    // Messages subcollection
    match /messages/{chatId}/messages/{messageId} {
      // Users can read messages in their chats
      allow read: if isAuthenticated();
      
      // Users can create messages in chats they're part of
      allow create: if isAuthenticated()
                    && request.resource.data.senderId == request.auth.uid;
      
      // Users can update their own messages
      allow update: if isAuthenticated()
                    && resource.data.senderId == request.auth.uid;
      
      // Users can delete their own messages
      allow delete: if isAuthenticated()
                    && resource.data.senderId == request.auth.uid;
    }
  }
}

